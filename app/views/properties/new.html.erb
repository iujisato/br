<% if @property.errors.any? %>
  <div id="error_explanation">
    <h2>
       <%= "#{I18n.t('.form.message.invalid')} #{pluralize(@property.errors.count, I18n.t('.word.errors'))} #{I18n.t('.form.message.invalid_continue')}" %>
    </h2>
    <ul>
       <% @property.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </ul>
   </div>
    <% end %>

<div class="row">
  <div class="col s12">
    <h2 class="properties_new_h2"><%= "#{t('.hi')}, Rodolfo! #{ t('.title_preparation_ad')}" %></h2>
    <span>
        <%= "#{t('.step')} 1 " %>
    </span>

    <h4><%= t('.properties_kind_of_space') %></h4>

  <%= simple_form_for(@property, html: { novalidate: true }) do |f| %>

    <div class="input-field col s12">
      <%= f.input :title, required: true %>
    </div>
    <div class="input-field col s12">
      <%= f.association :archetype, collection: Archetype.all.map { |key| [I18n.t(".activerecord.attributes.archetype.#{key.name}"), key.id ] }, default: 1  %>
    </div>
    <div class="input-field col s12">
      <%= f.input :accommodates, input_html: { min: 1, max: 40 } %>
    </div>
    <div class="input-field col s12">
      <%= f.input :bathrooms, input_html: {  min: 1, max: 10 } %>
    </div>
    <div class="input-field col s12">
      <%= f.input :number_of_rooms, input_html: { min: 1, max: 20 } %>
    </div>
    <div class="input-field col s12">
      <%= f.input :furnished, as: :boolean, checked_value: true, unchecked_value: false %>
    </div>
    <div class="input-field col s12">
      <%= f.input :single_room, as: :boolean, checked_value: true, unchecked_value: false, input_html:{} %>
    </div>
    <div class="input-field col s12">
      <%= f.input :share_room, as: :boolean %>
    </div>
    <div class="input-field col s12">
      <%= f.input :price %>
    </div>
    <div class="input-field col s12">
      <%= f.input :description, as: :text, input_html: {id: "textarea1", class: "materialize-textarea", "data-length": 250} %>
    </div>


    <%= f.simple_fields_for :rule do |r| %>
    <div class="input-field col s12">
      <%= r.input :description, as: :text, input_html: {id: "textarea2", class: "materialize-textarea", "data-length": 250} %>
    </div>

   <% end %>

    <div class="input-field col s12">
      <%= f.button :submit %>
    </div>
<% end %>

  </div>
</div>